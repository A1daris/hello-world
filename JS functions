var try1 = str2.substr(4, 3); //substr(откуда отрезать, сколько отрезать)
var try2 = str2.substring(4, 7); //substring(откуда отрезать, докуда отрезать)
var try3 = str2.slice(4, 7);
testEl.textContent = try2;

