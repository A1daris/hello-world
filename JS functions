arrpu.push(1, 2, 3);
testEl.textContent = arrpu; //push добавляет неограниченное количество элементов в конец массива

var hiObj = {
	js:'test',
    jq: 'hello',
    css: 'world'
    };
testEl.textContent = (Object.keys(hiObj) + hiObj['js']);

function math(a, b, c)
{
	return (a-b) / c
};
testEl.textContent = math(5 , 2 , 625);

//Сделайте функцию, которая принимает год, а возвращает високосный это год или нет.
function year(yeardate) {
if((yeardate % 4 == 0 && yeardate % 100 !== 0) || yeardate % 400 == 0) {
	return true
    } else { return false}
 }
